# Radio-Mapper Environment Configuration
# Copy this file to .env and customize for your deployment

# === Server Ports ===
# HTTP API port (for data access)
HTTP_PORT=4000

# WebSocket port (for buoy connections)
WEBSOCKET_PORT=8081

# Web interface port (for monitoring dashboard)
WEB_PORT=7000

# === Network ===
# Server bind address (0.0.0.0 for all interfaces, localhost for local only)
BIND_HOST=0.0.0.0

# === Docker Override Ports ===
# Uncomment and modify these for custom Docker port mapping
# DOCKER_HTTP_PORT=4000
# DOCKER_WEBSOCKET_PORT=8081
# DOCKER_WEB_PORT=5000

# === Development ===
# Enable development mode features
DEVELOPMENT_MODE=false

# === Buoy Configuration ===
# Unique identifier for this buoy
BUOY_ID=OKC_BUOY_1

# Central server connection (for buoy nodes)
CENTRAL_HOST=localhost 